<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_ranking"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/sixty_dp" />

        <TextView
            android:id="@+id/tv_rankingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_ranking"
            android:textSize="@dimen/twelve_sp" />

        <TextView
            android:id="@+id/tv_ranking_Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rankingName"
            android:layout_toRightOf="@id/img_ranking"
            android:textSize="@dimen/ten_sp" />

        <TextView
            android:id="@+id/tv_ranking_Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ranking_Title1"
            android:layout_toRightOf="@id/img_ranking"
            android:textSize="@dimen/ten_sp" />

        <TextView
            android:id="@+id/tv_ranking_Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ranking_Title2"
            android:layout_toRightOf="@id/img_ranking"
            android:textSize="@dimen/ten_sp" />

        <ImageView
            android:id="@+id/btn_ranking"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_alignBottom="@+id/tv_ranking_Title2"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/ic_action_more" />
</RelativeLayout>