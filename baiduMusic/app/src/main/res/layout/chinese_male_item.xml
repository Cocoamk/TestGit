<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_chinese_male_pic"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:background="#eeff"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"/>
        <TextView
            android:id="@+id/tv_chinese_male_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:textSize="@dimen/twelve_sp"
            android:layout_marginTop="@dimen/twenty_dp"/>
        <ImageView
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/twenty_dp"
            android:background="@mipmap/ic_action_more"
            android:layout_marginLeft="@dimen/two_hundred_sixty"
            android:layout_marginTop="@dimen/twenty_dp"/>

</LinearLayout>