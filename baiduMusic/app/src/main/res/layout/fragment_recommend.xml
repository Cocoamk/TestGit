<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/recommend_ViewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred_forty_dp"></android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/twenty_dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rl_song_classify">

                    <ImageView
                        android:id="@+id/img_songs_classify"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@mipmap/ic_listmore_mv_press"
                        android:layout_marginLeft="@dimen/twenty_five_dp"/>

                    <TextView
                        android:id="@+id/tv_songs_classify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/song_classify"
                        android:layout_marginLeft="@dimen/twenty_dp"
                        android:layout_below="@id/img_songs_classify"
                        android:layout_marginTop="@dimen/five_dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rl_all_singer">

                    <ImageView
                        android:id="@+id/img_all_singer"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@mipmap/ic_listmore_songer_press"
                        android:layout_marginLeft="@dimen/ten_dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_singer"
                        android:layout_below="@id/img_all_singer"
                        android:layout_marginTop="@dimen/five_dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rl_today_recommend">

                    <ImageView
                        android:id="@+id/img_today_recommend"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@mipmap/ic_listmore_love_press"
                        android:layout_marginLeft="@dimen/ten_dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_recommend"
                        android:layout_below="@id/img_today_recommend"
                        android:layout_marginTop="@dimen/five_dp"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_songRecommend"
                        android:layout_width="@dimen/ten_dp"
                        android:layout_height="@dimen/ten_dp"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:background="@mipmap/ic_recommend_columnist" />

                    <TextView
                        android:id="@+id/tv_songRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:text="歌曲推荐"
                        android:textSize="@dimen/twelve_sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/ll_more">

                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="@dimen/twenty_dp"
                            android:layout_height="@dimen/twenty_dp"
                            android:layout_marginLeft="@dimen/two_hundred_dp"
                            android:text="@string/more"
                            android:textSize="@dimen/ten_sp" />

                        <Button
                            android:layout_width="@dimen/fifteen_dp"
                            android:layout_height="@dimen/fifteen_dp"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/five_dp"
                            android:background="@mipmap/ic_action_more" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_recommendSongUpLeft"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/ninty_dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_recommendSongUpMiddle"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/ninty_dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_recommendSongUpRight"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/ninty_dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_recommendSongUpLeft"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:id="@+id/tv_recommendSongUpMiddle"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:id="@+id/tv_recommendSongUpRight"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/ten_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_recommendSongDownLeft"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/ninty_dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_recommendSongDownMiddle"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_recommendSongDownRight"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_recommendSongDownLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--</FrameLayout>-->
</LinearLayout>