<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
<Button
    android:layout_width="@dimen/twenty_dp"
    android:layout_height="@dimen/twenty_dp"
    android:background="@mipmap/ic_songlist_play"
    android:layout_marginTop="@dimen/ten_dp"
    android:layout_marginLeft="@dimen/ten_dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Random_play_all"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/ten_dp"/>
    <Button
        android:layout_width="@dimen/twenty_dp"
        android:layout_height="@dimen/twenty_dp"
        android:background="@mipmap/bt_localmusic_edit_nor"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/one_hundred_sixty"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/The_batch_management"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/ten_dp"/>
</LinearLayout>
</LinearLayout>