<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <FrameLayout
        android:id="@+id/fragmentLayout_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ktv_myksong_img_bg"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_marginLeft="320dp"
                        android:layout_marginTop="40dp"
                        android:background="@mipmap/ic_mymusic_try_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="310dp"
                        android:text="@string/Just_listen_to"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/ten_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"

                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:id="@+id/ll_local_music">

                    <ImageView
                        android:id="@+id/image_local"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginLeft="@dimen/twenty_dp"
                        android:background="@mipmap/ic_mymusic_local_normal" />

                    <TextView
                        android:id="@+id/tv_localSongs"
                        android:layout_width="@dimen/two_hundred_sixty"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:text="@string/local_songs" />

                    <Button
                        android:id="@+id/btn_localSong_start"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginRight="@dimen/twenty_dp"
                        android:background="@mipmap/ic_songlist_play" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginTop="@dimen/one_dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:id="@+id/ll_recently_play">

                    <ImageView
                        android:id="@+id/img_recently"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginLeft="@dimen/twenty_dp"
                        android:src="@mipmap/ic_mymusic_play_normal" />

                    <TextView
                        android:layout_width="@dimen/two_hundred_sixty"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:text="@string/recently_play" />

                    <Button
                        android:id="@+id/btn_recently_play"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/ic_action_more" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginTop="@dimen/two_dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:id="@+id/ll_load_manager">

                    <ImageView
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginLeft="@dimen/twenty_dp"
                        android:src="@mipmap/ic_mymusic_download_normal" />

                    <TextView
                        android:id="@+id/tv_load"
                        android:layout_width="@dimen/two_hundred_sixty"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:text="@string/load_manager" />

                    <Button
                        android:id="@+id/btn_loadsongs"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:background="@mipmap/ic_action_more" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:id="@+id/ll_my_ksong">

                    <ImageView
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginLeft="@dimen/twenty_dp"
                        android:src="@mipmap/ic_mymusic_ktv_normal" />

                    <TextView
                        android:id="@+id/tv_mineK"
                        android:layout_width="@dimen/two_hundred_sixty"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:text="@string/mine_k_songs" />

                    <Button
                        android:id="@+id/btn_mine_k_song"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:background="@mipmap/ic_action_more" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_collect_songs_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:text="@string/collect_song_menu" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:id="@+id/rl_my_collect_songs">

                    <ImageView
                        android:id="@+id/img_collect_icon"
                        android:layout_width="@dimen/thirty_five_dp"
                        android:layout_height="@dimen/thirty_five_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:background="@mipmap/ic_mymusic_collection" />

                    <TextView
                        android:id="@+id/tv_mine_collect_song"
                        android:layout_width="@dimen/two_hundred_sixty"
                        android:layout_height="@dimen/twenty_dp"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:layout_toRightOf="@+id/img_collect_icon"
                        android:text="@string/mine_collect_song" />

                    <EditText
                        android:id="@+id/et_songs_count"
                        android:layout_width="@dimen/two_hundred_five_dp"
                        android:layout_height="@dimen/twenty_dp"
                        android:layout_below="@id/tv_mine_collect_song"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_toRightOf="@+id/img_collect_icon"
                        android:enabled="false"
                        android:hint="0é¦–" />

                    <Button
                        android:id="@+id/btn_collect_to_next"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:layout_toRightOf="@+id/et_songs_count"
                        android:background="@mipmap/ic_action_more" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_myself_song_menu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:text="@string/myself_new_song_menu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_my_default_songList">

                    <ImageView
                        android:id="@+id/img_myself_new"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@mipmap/ic_mymusic_empty_list" />

                    <TextView
                        android:id="@+id/tv_mine_default_menu"
                        android:layout_width="@dimen/two_hundred_five_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:text="@string/mine_default_song_menu" />

                    <Button
                        android:id="@+id/btn_default_menu"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:background="@mipmap/ic_action_more" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_new_songList">

                    <ImageView
                        android:id="@+id/img_new_song_menu"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@mipmap/ic_mymusic_add_nor" />

                    <TextView
                        android:id="@+id/tv_new_song_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginTop="@dimen/eight_dp"
                        android:text="@string/new_song_menu" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</LinearLayout>