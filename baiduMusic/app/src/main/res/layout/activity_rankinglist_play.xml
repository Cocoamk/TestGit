<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_fifty_dp">

            <ImageView
                android:id="@+id/img_ranking_play_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred_fifty_dp"
                android:background="#ffffff"
                />

            <ImageView
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:background="@mipmap/ic_songlist_play"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_song_list_play_title"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_hundred_thirty_dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/twelve_sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="共100首歌" />



            <Button
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_marginLeft="@dimen/two_hundred_dp"
                android:background="@mipmap/ic_download_normal" />

            <Button
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:background="@mipmap/ic_share_normal" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_ranking_play"
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_hundred_thirty_dp" />
    </LinearLayout>

    <include layout="@layout/activity_song_detail_main" />

</LinearLayout>